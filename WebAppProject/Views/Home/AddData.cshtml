<script> /* กันกรอกอักขระพิเศษได้ตามที่กำหนด */
document.addEventListener('input', function(event) {
    if (event.target.tagName === 'INPUT') {
        const inputValue = event.target.value;
            const sanitizedValue = inputValue.replace(/[^a-zA-Z0-9,():_&'@@.::~\s+-/]/g, '');
        event.target.value = sanitizedValue;
    }
});
</script>

<script> /* สำหรับกรอกเบอร์ บล็อกอักษรตัวอื่น*/
// Get all elements with the specified class name
const inputs = document.querySelectorAll('.specialCharNumber');

// Loop through each input element and attach event listener
inputs.forEach(input => {
    if (event.target.tagName === 'INPUT' || event.target.tagName === 'TEXTAREA') {
            const inputValue = event.target.value;
            const sanitizedValue = inputValue.replace(/[^0-9\s/\+-/]/g, '');
            event.target.value = sanitizedValue;
     }
});
</script>

<script> /* @* สำหรับกรอกอีเมล์ บล็อกอักษรตัวอื่น*@ */
